        width: 100%;
        border-collapse: collapse;
    }

    .computers-table thead {
        background: #f5f7fa;
        border-bottom: 2px solid #ecf0f1;
    }

    .computers-table th {
        padding: 12px 16px;
        text-align: left;
        font-size: 12px;
        font-weight: 700;
        color: #7f8c8d;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .computers-table td {
        padding: 12px 16px;
        border-bottom: 1px solid #ecf0f1;
        font-size: 13px;
    }

    .computers-table tbody tr:hover {
        background: #f5f7fa;
    }

    .computers-table tbody tr:last-child td {
        border-bottom: none;
    }

    /* Modal */
    .modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.5);
        z-index: 1000;
        align-items: center;
        justify-content: center;
    }

    .modal.active {
        display: flex;
