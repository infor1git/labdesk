{# LabDesk Main Template - labdesk.html.twig #}

<div class="labdesk-container">
    <!-- Header with Statistics -->
    <div class="labdesk-header">
        <div class="labdesk-title">
            <h2>üñ•Ô∏è LabDesk</h2>
            <p>Gest√£o de Computadores RustDesk</p>
        </div>
        
        <div class="labdesk-stats">
            <div class="stat-box">
                <div class="stat-number" id="totalComputers">{{ computers|length }}</div>
                <div class="stat-label">Computadores</div>
            </div>
            <div class="stat-box">
                <div class="stat-number" id="onlineCount">
                    {% set online_count = computers|filter(c => c.status == 'online')|length %}
                    {{ online_count }}
                </div>
                <div class="stat-label">Online</div>
            </div>
            <div class="stat-box">
                <div class="stat-number" id="groupsCount">{{ groups|length }}</div>
                <div class="stat-label">Grupos</div>
            </div>
        </div>
    </div>

    <div class="labdesk-main">
        <!-- Sidebar Filters -->
        <aside class="labdesk-sidebar">
            <!-- Search Box -->
            <div class="sidebar-section">
                <input type="text" 
                       class="search-box" 
                       id="searchInput" 
                       placeholder="Buscar computador..."
                       aria-label="Buscar computador">
            </div>

            <!-- Status Filters -->
            <div class="sidebar-section">
                <h3 class="sidebar-title">
                    Status
                    <button class="btn-clear" title="Limpar filtros">‚úï</button>
                </h3>
                <div class="filter-group">
                    <div class="filter-item active" data-filter="all">
                        Todos
                        <span class="filter-count">{{ computers|length }}</span>
                    </div>
                    <div class="filter-item" data-filter="online">
                        Online
                        <span class="filter-count" id="count-online">
                            {% set online = computers|filter(c => c.status == 'online')|length %}
                            {{ online }}
                        </span>
                    </div>
                    <div class="filter-item" data-filter="offline">
                        Offline
                        <span class="filter-count" id="count-offline">
                            {% set offline = computers|filter(c => c.status != 'online')|length %}
                            {{ offline }}
                        </span>
                    </div>
                </div>
            </div>

            <!-- Units Filters -->
            <div class="sidebar-section">
                <h3 class="sidebar-title">
                    Unidades
                    <button class="btn-settings" title="Editar unidades">‚öôÔ∏è</button>
                </h3>
                <div class="filter-group" id="unitsFilter">
                    <div class="filter-item" data-filter="all-units">Todas Unidades</div>
                    {% for unit in settings.units|default([]) %}
                        <div class="filter-item" data-filter="{{ unit }}">
                            {{ unit }}
                            <span class="filter-count">
                                {% set count = computers|filter(c => c.unit == unit)|length %}
                                {{ count }}
                            </span>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <!-- Departments Filters -->
            <div class="sidebar-section">
                <h3 class="sidebar-title">
                    Setores
                    <button class="btn-settings" title="Editar setores">‚öôÔ∏è</button>
                </h3>
                <div class="filter-group" id="departmentsFilter">
                    <div class="filter-item" data-filter="all-depts">Todos Setores</div>
                    {% for dept in settings.departments|default([]) %}
                        <div class="filter-item" data-filter="{{ dept }}">
                            {{ dept }}
                            <span class="filter-count">
                                {% set count = computers|filter(c => c.department == dept)|length %}
                                {{ count }}
                            </span>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <!-- Custom Groups -->
            <div class="sidebar-section">
                <h3 class="sidebar-title">
                    Meus Grupos
                    <button class="btn-add-group" id="btnNewGroup" title="Novo grupo">+</button>
                </h3>
                <div class="filter-group" id="groupsFilter">
                    {% if groups|length == 0 %}
                        <div class="filter-item empty-state">
                            Nenhum grupo criado
                        </div>
                    {% else %}
                        {% for group in groups %}
                            <div class="filter-item" data-filter="group-{{ group.id }}" data-group="{{ group.name }}">
                                {{ group.name }}
                                <span class="filter-count">{{ group.computer_count }}</span>
                            </div>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="labdesk-content">
            <!-- Toolbar -->
            <div class="labdesk-toolbar">
                <div class="toolbar-left">
                    <button class="btn btn-secondary" id="btnRefresh">üîÑ Atualizar</button>
                    <button class="btn btn-secondary" id="btnSelectAll">‚òëÔ∏è Selecionar Todos</button>
                    <span class="selected-count" id="selectedCount">0 selecionados</span>
                </div>
                <div class="toolbar-right">
                    <div class="view-toggle">
                        <button class="view-btn active" data-view="grid" title="Visualizar em Grid">‚äû Grade</button>
                        <button class="view-btn" data-view="table" title="Visualizar em Tabela">‚â° Tabela</button>
                    </div>
                    <button class="btn btn-primary" id="btnAddComputer">+ Novo</button>
                </div>
            </div>

            <!-- Grid View -->
            <div id="gridView" class="computers-grid">
                {% if computers|length == 0 %}
                    <div class="empty-state">
                        <div class="empty-icon">üîç</div>
                        <p>Nenhum computador encontrado</p>
                    </div>
                {% else %}
                    {% for computer in computers %}
                        <div class="computer-card" data-computer-id="{{ computer.id }}">
                            <div class="card-header">
                                <div>
                                    <h4 class="computer-name">{{ computer.rustdesk_name }}</h4>
                                    <div class="computer-alias" 
                                         onclick="editComputer({{ computer.id }})" 
                                         title="Clique para editar apelido">
                                        {{ computer.alias|default('Sem apelido - Clique para editar') }}
                                    </div>
                                </div>
                                <button class="card-menu" onclick="openComputerMenu(event, {{ computer.id }})">‚ãÆ</button>
                            </div>

                            <span class="status-badge {% if computer.status == 'online' %}online{% else %}offline{% endif %}">
                                <span class="status-dot"></span>
                                {{ computer.status|upper }}
                            </span>

                            <div class="computer-info">
                                <div class="info-row">
                                    <span class="info-label">Unidade:</span>
                                    <span class="info-value">{{ computer.unit|default('-') }}</span>
                                </div>
                                <div class="info-row">
                                    <span class="info-label">Setor:</span>
                                    <span class="info-value">{{ computer.department|default('-') }}</span>
                                </div>
                                <div class="info-row">
                                    <span class="info-label">√öltimo Online:</span>
                                    <span class="info-value" title="{{ computer.last_online }}">
                                        {% set last = computer.last_online|date('Y-m-d H:i:s') %}
                                        Agora
                                    </span>
                                </div>
                            </div>

                            {% if computer.groups|length > 0 %}
                                <div class="card-groups">
                                    {% for group in computer.groups %}
                                        <span class="group-badge">
                                            {{ group }}
                                            <button class="remove-group" 
                                                    onclick="removeComputerFromGroup({{ computer.id }}, '{{ group }}')">
                                                √ó
                                            </button>
                                        </span>
                                    {% endfor %}
                                </div>
                            {% endif %}

                            <div class="card-actions">
                                <button class="btn-action" onclick="editComputer({{ computer.id }})">‚úé Editar</button>
                                <button class="btn-action danger" onclick="deleteComputer({{ computer.id }})">üóë Deletar</button>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>

            <!-- Table View -->
            <div id="tableView" class="table-view" style="display: none;">
                <div class="table-wrapper">
                    <table class="computers-table">
                        <thead>
                            <tr>
                                <th><input type="checkbox" class="checkbox" id="tableSelectAll"></th>
                                <th>Status</th>
                                <th>Nome</th>
                                <th>Apelido</th>
                                <th>Unidade</th>
                                <th>Setor</th>
                                <th>Grupos</th>
                                <th>√öltimo Online</th>
                                <th>A√ß√µes</th>
                            </tr>
                        </thead>
                        <tbody id="tableBody">
                            {% if computers|length == 0 %}
                                <tr>
                                    <td colspan="9" style="text-align: center; padding: 40px; color: #7F8C8D;">
                                        Nenhum computador encontrado
                                    </td>
                                </tr>
                            {% else %}
                                {% for computer in computers %}
                                    <tr data-computer-id="{{ computer.id }}">
                                        <td><input type="checkbox" class="checkbox" data-computer-id="{{ computer.id }}"></td>
                                        <td>
                                            <span class="status-badge {% if computer.status == 'online' %}online{% else %}offline{% endif %}">
                                                <span class="status-dot"></span>
                                                {{ computer.status|upper }}
                                            </span>
                                        </td>
                                        <td>{{ computer.rustdesk_name }}</td>
                                        <td>
                                            <span style="cursor: pointer; color: #2180CD;" onclick="editComputer({{ computer.id }})">
                                                {{ computer.alias|default('-') }}
                                            </span>
                                        </td>
                                        <td>{{ computer.unit|default('-') }}</td>
                                        <td>{{ computer.department|default('-') }}</td>
                                        <td>{{ computer.groups|join(', ')|default('-') }}</td>
                                        <td>{{ computer.last_online|default('-') }}</td>
                                        <td>
                                            <button class="btn-table-action" onclick="editComputer({{ computer.id }})">Editar</button>
                                        </td>
                                    </tr>
                                {% endfor %}
                            {% endif %}
                        </tbody>
                    </table>
                </div>
            </div>
        </main>
    </div>
</div>

<!-- Modals -->
<!-- Edit Computer Modal -->
<div class="modal" id="editComputerModal">
    <div class="modal-content">
        <button class="modal-close" onclick="closeModal('editComputerModal')">√ó</button>
        <h3 class="modal-title">Editar Computador</h3>
        
        <form id="editComputerForm" class="labdesk-form">
            <div class="form-group">
                <label class="form-label">ID do Computador</label>
                <input type="text" class="form-input" id="editCompId" readonly>
            </div>

            <div class="form-group">
                <label class="form-label">Nome do Computador</label>
                <input type="text" class="form-input" id="editCompName" readonly>
            </div>

            <div class="form-group">
                <label class="form-label">Apelido/Descri√ß√£o</label>
                <input type="text" class="form-input" id="editCompAlias" 
                       placeholder="Ex: Computador da Recep√ß√£o">
            </div>

            <div class="form-group">
                <label class="form-label">Unidade</label>
                <select class="form-select" id="editCompUnit">
                    <option>Selecione a unidade</option>
                    {% for unit in settings.units|default([]) %}
                        <option value="{{ unit }}">{{ unit }}</option>
                    {% endfor %}
                </select>
            </div>

            <div class="form-group">
                <label class="form-label">Setor</label>
                <select class="form-select" id="editCompDept">
                    <option>Selecione o setor</option>
                    {% for dept in settings.departments|default([]) %}
                        <option value="{{ dept }}">{{ dept }}</option>
                    {% endfor %}
                </select>
            </div>

            <div class="form-group">
                <label class="form-label">Adicionar a Grupos</label>
                <div id="groupsCheckboxes" class="checkboxes-list">
                    {% for group in groups %}
                        <label class="checkbox-label">
                            <input type="checkbox" class="checkbox" value="{{ group.id }}" data-group-name="{{ group.name }}">
                            <span>{{ group.name }}</span>
                        </label>
                    {% endfor %}
                </div>
            </div>

            <div class="form-actions">
                <button type="button" class="btn btn-secondary" onclick="closeModal('editComputerModal')">
                    Cancelar
                </button>
                <button type="submit" class="btn btn-primary">
                    Salvar Altera√ß√µes
                </button>
            </div>
        </form>
    </div>
</div>

<!-- New Group Modal -->
<div class="modal" id="newGroupModal">
    <div class="modal-content">
        <button class="modal-close" onclick="closeModal('newGroupModal')">√ó</button>
        <h3 class="modal-title">Novo Grupo</h3>
        
        <form id="newGroupForm" class="labdesk-form">
            <div class="form-group">
                <label class="form-label">Nome do Grupo</label>
                <input type="text" class="form-input" id="groupName" 
                       placeholder="Ex: Computadores da TI">
            </div>

            <div class="form-group">
                <label class="form-label">Descri√ß√£o</label>
                <textarea class="form-input" id="groupDesc" 
                          placeholder="Descri√ß√£o do grupo (opcional)" 
                          rows="3"></textarea>
            </div>

            <div class="form-group">
                <label class="form-label">Selecione Computadores</label>
                <div id="groupComputersCheckboxes" class="checkboxes-list scrollable">
                    {% for computer in computers %}
                        <label class="checkbox-label">
                            <input type="checkbox" class="checkbox" value="{{ computer.id }}">
                            <span>{{ computer.alias|default(computer.rustdesk_name) }}</span>
                        </label>
                    {% endfor %}
                </div>
            </div>

            <div class="form-actions">
                <button type="button" class="btn btn-secondary" onclick="closeModal('newGroupModal')">
                    Cancelar
                </button>
                <button type="submit" class="btn btn-primary">
                    Criar Grupo
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Styles -->
